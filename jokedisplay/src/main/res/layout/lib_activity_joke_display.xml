<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".4"
        android:background="@color/lib_theme_primary_dark">

        <include layout="@layout/lib_toolbar"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/cow"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".6"
        android:background="@color/lib_theme_primary"
        android:padding="@dimen/lib_keyline_1_double">

        <TextView
            android:id="@+id/lib_joke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LibTextJoke"
            android:layout_gravity="center"/>
    </FrameLayout>
</LinearLayout>